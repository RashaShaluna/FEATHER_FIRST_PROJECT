        };

</script>

<%- include("../partials/admin/header") %>

<div class="container mt-4">
    <h1 class="mb-3 text-center">Dashboard</h1>

    <!-- Sales Report Button -->
    <div class="d-flex justify-content-end mb-3">
        <a href="salesReport" class="btn btn-primary">Get Sales Report</a>
