<%- include('../adminlayouts/header') %>
<div class="main-panel">
    <div class="content-wrapper">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Users Details</h5>


                    <!-- Search -->
                    <form method="GET" action="/admin/users" class="d-flex mb-4">
                        <input class="form-control me-2" type="search" name="search" placeholder="Search by username or email" aria-label="Search" value="<%= searchQuery %>">
                        <button class="btn btn-outline-success" type="submit" style="color: white; background-color: #1cc0a0;">Search</button>
                    </form>
                 
                    <!-- Table -->
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered text-center">
                            <thead>
                                <tr>
                                    <th>No:</th>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(let i = 0; i < data.length; i++) { %>
                                    <tr>
                                        <td><%= (currentPage - 1) * 3 + i + 1 %></td>
                                        <td><%= data[i].name %></td>
                                        <td><%= data[i].email %></td>
                                        <td>
                                            <div>
                                                <% if (data[i].isBlocked === false) { %>
                                                    <button class="btn mt-2" style="width: 70%;  background-color:red  ;   color:white" >
                                                        <a href="/admin/blockCustomer?id=<%= data[i]._id %>" class="text-white" style="text-decoration: none;">Block</a>
                                                    </button>
                                                <% } else { %>
                                                    <button class="btn mt-2" style="width: 70%;  background-color:rgb(49, 159, 49);   color:white">
                                                        <a href="/admin/unblockCustomer?id=<%= data[i]._id %>" class="text-white" style="text-decoration: none;">Unblock</a>
                                                    </button>
                                                <% } %>
                                                <!-- <div class="mt-3 icon-div" >
                                                    
                                                    <i class="fa fa-pencil"></i>
                                                </a>
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                                </div> -->
                                                
                                            </div>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                        
                        <!-- Pagination -->
                        <div class="mt-4">
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center">
                                    <% for(let i = 1; i <= totalPage; i++) { %>
                                        <li class="page-item <%=(i === currentPage) ? 'active' : ''%>">
                                            <a class="page-link" href="?page=<%= i %>&search=<%= searchQuery %>"><%= i %></a>
                                        </li>
                                    <% } %>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('../adminlayouts/footer') %>
