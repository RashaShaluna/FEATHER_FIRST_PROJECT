        <script>
            document.querySelectorAll('.btn-wishlist').forEach(button => {
                button.addEventListener('click', function(event) {
                    event.preventDefault();
                    const productId = this.getAttribute('data-product-id');
                    const isInWishlist = this.classList.contains('wishlist-active');
                    const url = isInWishlist ? '/remove' : '/add';
            
                    fetch(url, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ productId }),
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            this.classList.toggle('wishlist-active');
                            this.querySelector('span').textContent = isInWishlist ? 'Add to Wishlist' : 'Remove from Wishlist';
                              
                            Swal.fire({
                                icon: 'success',
                                title: isInWishlist ? 'Removed from Wishlist' : 'Added to Wishlist',
                                showConfirmButton: false,
                                timer: 1500
                            });
            
                            this.style.color = isInWishlist ? '' : 'red';
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: data.message,
                            });
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                    });
                });
            }); 
            </script>
            
</body>