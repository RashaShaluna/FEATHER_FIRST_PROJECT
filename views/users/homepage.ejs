        <script>
  document.addEventListener('DOMContentLoaded', () => {
  const wishlistButtons = document.querySelectorAll('.btn-wishlist');

  wishlistButtons.forEach(button => {
    button.addEventListener('click', async (event) => {
      event.preventDefault();

      const productId = button.dataset.productId;
      const isInWishlist = button.dataset.inWishlist === 'true';

      try {
        const response = await fetch(isInWishlist ? '/wishlist/remove' : '/wishlist/add', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ productId }),
        });

        const data = await response.json();

        if (data.success) {
          const btnText = document.getElementById(`wishlistBtnText_${productId}`);
          if (isInWishlist) {
            button.dataset.inWishlist = 'false';
            btnText.textContent = 'Add to Wishlist';
            Swal.fire({
              icon: 'success',
              title: 'Removed from Wishlist',
              text: 'The product has been removed from your wishlist.',
              timer: 2000,
              showConfirmButton: false
            });
          } else {
            button.dataset.inWishlist = 'true';
            btnText.textContent = 'Remove from Wishlist';
            Swal.fire({
              icon: 'success',
              title: 'Added to Wishlist',
              text: 'The product has been added to your wishlist.',
              timer: 2000,
              showConfirmButton: false
            });
          }
        } else {
          Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: data.message || 'Something went wrong!',
          });
        }
      } catch (error) {
        console.error('Error updating wishlist:', error);
        Swal.fire({
          icon: 'error',
          title: 'Oops...',
          text: 'There was an error updating your wishlist. Please try again.',
        });
      }
    });
  });



  //CART
  const addToCartButtons = document.querySelectorAll('.btn-add-cart');
  
  addToCartButtons.forEach(button => {
    button.addEventListener('click', async function() {
      const productId = this.dataset.productId;
      
      try {
        const response = await fetch('/addToCart', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            productId: productId,
            quantity: 1
          })
        });

        const data = await response.json();
        
        if (response.ok) {
          Swal.fire({
            icon: 'success',
          title: 'Added to Cart',
          text: 'The product has been added to your cart.',
          timer: 2000,
          showConfirmButton: false,
          }).then((result) => {
            window.location.reload();
          });
        } else {
          throw new Error(data.message || 'Failed to add product to cart');
        }
      } catch (error) {
        Swal.fire({
          title: 'Error!',
          text: error.message,
          icon: 'error',
          confirmButtonText: 'Ok'
        });
      }
    });
  });
});


          </script>
          
            
