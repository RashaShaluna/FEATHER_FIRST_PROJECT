    <%- include('../layouts/header') %>
<% } else { %>
    <%- include('../layouts/homeheader') %>
<% } %>

<style>
    .filter-price-inputs input {
  width: 80px;
  margin-right: 5px;
}

.filter-price-buttons button {
  width: 30px;
  height: 30px;
  margin: 5px;
}

.filter-price-buttons {
  margin-bottom: 10px;
}
/* styles.css */
/* General button styles */
.btn-wishlist {
    color: #000; /* Default color */
}

.btn-wishlist.in-wishlist {
    color: red; /* Red color for added to wishlist */
}

/* Toast styles */
.toast {
    position: fixed;
    bottom: 10px;
    right: 10px;
    padding: 10px 20px;
    border-radius: 5px;
    color: #fff;
    font-size: 16px;
    opacity: 0.9;
    transition: opacity 0.3s ease;
}

.toast-success {
    background-color: #28a745;
}

.toast-error {
    background-color: #dc3545;
}
/* Optional: Style "Go to Cart" differently */
.btn-product.btn-cart.go-to-cart {
  background-color: #28a745;
  color: white;
}


@media screen and (max-width: 768px) {
  .filter-price-inputs {
    display: flex;
    flex-direction: column;
    width: 300px;
    margin-bottom: 10px;
  }
}
</style>
<body>
	<div class="page-wrapper">
        <main class="main">
            <div class="page-header text-center" style="background-image: url('/assets/images/page-header-bg.jpg')">
                <div class="container">
                    <h1 class="page-title" style="color: #c49213;"> <% if (category) { %>
                        <%= category.name %>
                    
                    <% } else { %>
                        All Products
                    <% } %></h1>
                </div><!-- End .container -->
            </div><!-- End .page-header -->

            
            <nav aria-label="breadcrumb" class="breadcrumb-nav mb-2">
