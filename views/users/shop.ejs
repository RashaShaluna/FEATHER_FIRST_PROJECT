/* Toast styles */
.toast {
    position: fixed;
    bottom: 10px;
    right: 10px;
    padding: 10px 20px;
    border-radius: 5px;
    color: #fff;
    font-size: 16px;
    opacity: 0.9;
    transition: opacity 0.3s ease;
}

.toast-success {
    background-color: #28a745;
}

.toast-error {
    background-color: #dc3545;
}
/* Optional: Style "Go to Cart" differently */
