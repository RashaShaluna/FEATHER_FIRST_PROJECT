<script>

     // color filtering
  document.addEventListener('DOMContentLoaded', function() {
    const filterForm = document.getElementById('colorFilterForm');
    const checkboxes = filterForm.querySelectorAll('input[type="checkbox"]');

    checkboxes.forEach(checkbox => {
        checkbox.addEventListener('change', function() {
            const selectedColors = Array.from(checkboxes)
                .filter(checkbox => checkbox.checked)
                .map(checkbox => checkbox.value);

            const queryParams = new URLSearchParams(window.location.search);
            
            if (selectedColors.length > 0) {
                queryParams.set('colors', selectedColors.join(',')); 
            } else {
                queryParams.delete('colors'); 
            }

            window.location.search = queryParams.toString(); 
        });
    });
});



// price filtering
document.addEventListener('DOMContentLoaded', function() {
  const minPriceInput = document.getElementById('minPrice');
  const maxPriceInput = document.getElementById('maxPrice');
  const applyButton = document.getElementById('applyPriceFilter');

  function updateFilters() {
    const minPrice = minPriceInput.value;
    const maxPrice = maxPriceInput.value;

    const queryParams = new URLSearchParams(window.location.search);
    if (minPrice) {
      queryParams.set('minPrice', minPrice);
    } else {
      queryParams.delete('minPrice');
    }
    if (maxPrice) {
      queryParams.set('maxPrice', maxPrice);
    } else {
      queryParams.delete('maxPrice');
    }

    window.location.search = queryParams.toString();
  }

  applyButton.addEventListener('click', updateFilters);

 
});

// clear filters
document.addEventListener('DOMContentLoaded', function() {
    const clearFiltersButton = document.getElementById('clearFilters');

    clearFiltersButton.addEventListener('click', function() {
        const queryParams = new URLSearchParams(window.location.search);

        queryParams.delete('colors');  
        queryParams.delete('minPrice');
        queryParams.delete('maxPrice');
        queryParams.delete('sort');  
        queryParams.delete('page');       

        window.location.search = queryParams.toString();
    });
});























// Add product to wishlist
function addProductToWishlist(productId, event) {
  event.preventDefault(); // Prevent the default action of <a> tag
  const btn = event.target.closest('a'); // Get the closest anchor element (button)

  btn.classList.add('disabled'); // Disable the button during the request

  fetch('/addWishlist', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json'
    },
    body: JSON.stringify({ productId })
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      showToast('Product added to wishlist', 'success');
      // Update the UI to reflect the change, like switching the button to 'Remove'
      btn.innerHTML = '<span>Remove from Wishlist</span>';
      btn.setAttribute('onclick', `removeProductFromWishlist('${productId}', event);`);
    } else {
      showToast(data.message, 'error');
      console.error(data.message);
    }
  })
  .catch(error => {
    showToast('Failed to add product to wishlist. Please try again later.', 'error');
    console.error('Error:', error);
  })
  .finally(() => {
    btn.classList.remove('disabled'); // Re-enable the button
  });
}

// Remove product from wishlist
function removeProductFromWishlist(productId, event) {
  event.preventDefault(); // Prevent the default action of <a> tag
  const btn = event.target.closest('a'); // Get the closest anchor element (button)

  btn.classList.add('disabled'); // Disable the button during the request

  fetch('/removeWishlist', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json'
    },
    body: JSON.stringify({ productId })
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      showToast('Product removed from wishlist', 'success');
      // Update the UI to reflect the change, like switching the button to 'Add'
      btn.innerHTML = '<span>Add to Wishlist</span>';
      btn.setAttribute('onclick', `addProductToWishlist('${productId}', event);`);
    } else {
      showToast(data.message, 'error');
      console.error(data.message);
    }
  })
  .catch(error => {
    showToast('Failed to remove product from wishlist. Please try again later.', 'error');
    console.error('Error:', error);
  })
  .finally(() => {
    btn.classList.remove('disabled'); // Re-enable the button
  });
}

// Toast notification function
function showToast(message, type) {
  const toast = document.createElement('div');
  toast.className = `toast toast-${type}`;
  toast.textContent = message;
  document.body.appendChild(toast);
  
  // Automatically remove the toast after 3 seconds
  setTimeout(() => {
    toast.remove();
  }, 3000);
}




