<%- include('../layouts/header', { categories: categories}) %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
    .address {
        font-size: 15px;
    }
    .page {
        max-width: 1000px;
        margin-top: 50px;
    }
    .thankyou {
        margin-bottom: 30px;
    }
    .thankyou h1 {
        font-size: 36px;
        font-weight: 700;
        margin-bottom: 10px;
    }
    .order-details {
        background-color: #ffffff;
        padding: 20px;
        border: rgb(7, 7, 7);
        box-shadow: 0 2px 5px rgba(6, 6, 6, 0.1);
        border-radius: 0;
    }
    .order-details h2 {
        font-size: 24px;
        font-weight: 700;
        margin-bottom: 20px;
    }
    .order-items {
        margin-top: 20px;
    }
    .order-items {
        background-color: #ffffff;
        border: #000000;
        padding: 20px;
        margin-bottom: 20px;
        max-width: 100%;
        box-shadow: 0 2px 5px rgba(6, 6, 6, 0.1);
    }
    .items-body {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: 20px;
        border-bottom: 1px solid #e0e0e0;
    }
    .product-details {
        display: flex;
        align-items: center;
    }
    .product-details img {
        width: 120px;
        height: 120px;
        object-fit: cover;
        border-radius: 10px;
        margin-right: 20px;
    }
    .details h3 {
        font-size: 18px;
        margin-bottom: 10px;
        font-weight: 500;
    }
    .details p {
        margin-bottom: 5px;
        color: #666;
    }
    .delivery-info {
        color: #919191;
        font-size: 14px;
        display: flex;
        align-items: center;
    }
    .delivery-info i {
        margin-right: 8px;
    }
    .price-details {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
    }
    .price {
        font-size: 20px;
        font-weight: 700;
        margin-bottom: 5px;
        margin-top: 80px;
    }
    .offer {
        color: #28a745;
        font-size: 14px;
    }
    .actions {
        display: flex;
        align-items: center;
    }
    .cancel-btn {
        background-color: #1cc0a0;
        color: white;
        border: none;
        padding: 8px 15px;
        cursor: pointer;
        border-radius: 5px;
        display: flex;
        align-items: center;
    }
    .cancel-btn i {
        margin-right: 5px;
    }
    .chat-link {
        color: #1cc0a0;
        text-decoration: none;
        margin-left: 15px;
        display: flex;
        align-items: center;
    }
    .fa-truck {
        color: #565656;
    }
    .chat-link i {
        margin-right: 5px;
    }
    .total-price {
        text-align: right;
        margin-top: 10px;
    }
    .total-price p {
        font-size: 18px;
        font-weight: 600;
    }
    .order-details {
        margin: 20px;
    }
    .card-body {
        display: flex;
        align-items: flex-start;
    }
    .address {
        flex: 1;
        margin-right: 20px;
    }
    .image-container {
        flex: 0 0 180px;
        margin-left: -15px;
    }
    .image-container img {
        width: 100%;
        height: auto;
    }
    </style>
</head>
<body>
    <div class="container page  ">
        <div class="thankyou text-center">
            <h1>Thank you for your order!</h1>
            <p>Your ordered products will be delivered by <%= deliveryDate.toLocaleDateString('en-GB', { day: 'numeric', month: 'short' }) %>.</p>
        </div>

        <div class="order-details card">
            <div class="card-body d-flex align-items-start">
                <div class="address mr-4" style="flex: 1;">
                    <h2>Delivery Address:</h2>
                    <div class="d-flex flex-column">
                        <div class="mb-2"><%= order.address.name %></div>
                        <div><%= order.address.address %>, <%= order.address.landmark %></div>
                        <div><%= order.address.locality %>, <%= order.address.district %>, <%= order.address.state %></div>
                        <div class="mb-2"><%= order.address.pincode %>, <%= order.address.country %></div>
                        <div>Phone Numbers:</div>
                        <div><%= order.address.phone %>, <%= order.address.alternatePhone %></div>
                    </div>
                </div>
                <div class="image-container">
                    <img src="/assets/images/confirmed.jpg" alt="Order Confirmed" />
                </div>
            </div>
        </div>
        

     

        <% order.orderitems.forEach(orderitem => { %>
        <% for (let i = 0; i < orderitem.quantity; i++) { %>
            <div class="cart-item card order-items">
                <div class="cart-body items-body">
                    <div class="product-details">
                    <img src="/uploads/<%= orderitem.productId.images[0]%>" alt="Product Image">
                    <div class="details">
                        <h3><%= orderitem.productId.name %></h3>
                        <p>Color: <%= orderitem.productId.color %></p>
                        <div class="delivery-info">
                            <i class="fa fa-truck"></i> Delivery expected by <%= deliveryDate.toLocaleDateString('en-GB', { day: 'numeric', month: 'short' }) %>
                        </div>
                        
                        
                    </div>
                </div>
                <div class="price-details">
                    <div class="actions">
                        <button class="cancel-btn">
                            <i class="fa fa-close"></i> Cancel
                        </button>
                    </div>
                    <p class="price ">â‚¹<%= orderitem.orderPrice %></p>
                </div>
            </div>
            
        </div>
        <% } %>
        <% }) %>
        

    </div>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <%- include('../layouts/footer') %>

</body>
</html>

