    <script>
  document.getElementById('cancelOrderForm').addEventListener('click', async (event) => {
    event.preventDefault();
    console.log('1. event.preventDefault() called');
    const orderId = "<%= orderId %>";
    console.log('2. orderId:', orderId);
    const orderItemId = "<%= orderItemId %>";
    console.log('3. orderItemId:', orderItemId);
    const cancelReason = document.getElementById('cancelReason').value;
    console.log('4. cancelReason:', cancelReason);
    const cancellationComments = document.getElementById('comments').value;
    console.log('5. cancellationComments:', cancellationComments);
    const refundMode = document.querySelector('input[name="refundMode"]:checked').id;
    console.log('6. refundMode:', refundMode);

    try {
        console.log('7. try block started');
        const response = await fetch(`/cancelOrder/${orderId}/${orderItemId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ cancelReason, cancellationComments, refundMode }),
        });
        console.log('8. fetch completed');
        const result = await response.json();
        console.log('9. result:', result);

        if (!result.success) {
            console.log('10. result.success is false');
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: result.message,
            });
        } else {
            console.log('11. result.success is true');
            // Proceed without showing SweetAlert on success
            window.location.href = `/orderDetail/${orderId}/${orderItemId}`;
        }
    } catch (error) {
        console.error('12. error caught:', error);
        Swal.fire({
            icon: 'error',
            title: 'Server Error',
            text: 'Something went wrong. Please try again later.',
        });
    }
});
</script>

