<%- include('../layouts/header') %>

    <style>
        .cancel-order-container {
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
            background-color: white;
            padding : 0px 70px 0px 0px ;
            border-radius: 4px;
            box-shadow: 0px 2px 4px rgba(12, 11, 11, 0.1);
            width: 70%;
            margin: 20px auto;
            height: 55rem;
        }

        .product-card {
            width: 40%;
            padding: 10px;
            border-right: 1px solid #ddd;
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-right: 20px;
        }

        .product-card img {
            width: 150px;
            height: 150px;
            border-radius: 4px;
            margin-bottom: 5px;
        }

        .product-card h4 {
            font-size: 16px;
            color: #333;
            margin: 0;
            text-align: center;
        }

        .product-card p {
            font-size: 14px;
            color: #777;
            margin-top: 5px;
            text-align: center;
        }

        .cancel-form {
            width: 60%;
            padding-left: 10px;
        }

        .cancel-form label {
            font-size: 14px;
            color: #555;
            margin-bottom: 5px;
            display: block;
        }

        .cancel-form select,
        .cancel-form textarea {
            width: 100%;
            padding: 5px;
            margin-top: 5px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 14px;
        }

        .cancel-form textarea {
            height: 50px;
        }

        .payment-methods {
            margin-top: 15px;
            margin-bottom: 10px;
        }

        .payment-methods label {
            margin-right: 5px;
        }

        .submit-btn {
            margin-top: 10px;
                padding: 5px 10px;
            background-color:#1cc0a0;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
        }   

        .submit-btn:hover {
            background-color: white;
            color: #1cc0a0;
            border: 1px solid #1cc0a0;
        }

        #comments {
            height: 140px;
        }
    </style>
</head>
<body class="mb-5" >
  <main>
    <div class="page-header text-center" style="background-image: url('/assets/images/page-header-bg.jpg')">
        <div class="container">
            <h1 class="page-title">Order Cancellation</h1>
        </div><!-- End .container -->
    </div><!-- End .page-header -->
    <nav aria-label="breadcrumb" class="breadcrumb-nav">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Order Cancellation</li>
            </ol>
        </div><!-- End .container -->
    </nav><!-- End .breadcrumb-nav -->

    <div class="cancel-order-container">
        <% if (orderItem) { %>
            <div class="product-card">
                <img src="/uploads/<%= orderItem.productId.images[0] %>" alt="Product Image">
                <h4><%= orderItem.productId.name %></h4>
                <p>Price: â‚¹<%= orderItem.productId.salesPrice %></p>
            </div>
        <% } else { %>
            <p>No product found for cancellation.</p>
        <% } %>
        
        <div class="cancel-form">
            <form action="/cancelOrder/<%= order._id %>/<%= orderItem._id %>" method="POST">
              
                <label for="cancelReason">Reason for Cancellation:</label>
                <select name="cancelReason" id="cancelReason" required>
                    <option value="">--Select a reason--</option>
                    <option value="changed_mind">Changed my mind</option>
                    <option value="delay">Delivery took too long</option>
                    <option value="other">Other</option>
                </select>
        
                <label for="cancellationComments">Comments (Optional):</label>
                <textarea name="cancellationComments" id="comments" placeholder="Explain why you want to cancel"></textarea>
                
                <div class="payment-methods">
                    <label>Refund Modes:</label>
                    
                    <label>
                        <input type="radio" id="No refund" name="refundMode" value="No refund" required checked />
                        No valid refund
                    </label>
                    <div id="refundInfo" style="color: rgb(126, 126, 126); font-size: 11px;" class="mb-1">
                        There will be no refunds for Cash on Delivery orders.
                    </div>
                </div>
        
                <div>
                    <label>
                        <input type="radio" id="wallet" name="refundMode" value='wallet' />
                     Wallet
                    </label>
                </div>
        
                <div>
                    <button type="submit" id="cancelOrderForm" class="submit-btn">Submit Cancellation</button>
                </div>
            </form>
        </div>
    </div>
  </main>
