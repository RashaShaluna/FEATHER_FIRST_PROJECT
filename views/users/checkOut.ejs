        <script>
            // Get modal elements
            document.addEventListener('DOMContentLoaded', () => {
    // Select all edit links and modals
    const editLinks = document.querySelectorAll('[id^="editLink"]');
    const modals = document.querySelectorAll('[id^="form"]');
    const closeModalButtons = document.querySelectorAll('[id^="closeModal"]');

    // Function to open the modal
    function openModal(modal) {
        modal.style.display = 'block'; // Show the modal
        modal.classList.add('show'); // Add Bootstrap class for visibility
    }

    // Function to close the modal
    function closeModal(modal) {
        modal.style.display = 'none'; // Hide the modal
        modal.classList.remove('show'); // Remove Bootstrap class for visibility
    }

    // Attach click event listeners to all edit links
    editLinks.forEach((editLink, index) => {
        editLink.addEventListener('click', function(event) {
            event.preventDefault(); // Prevent default link behavior
            openModal(modals[index]); // Open the corresponding modal
        });
    });

    // Attach click event listeners to all close buttons
    closeModalButtons.forEach((button, index) => {
        button.addEventListener('click', function() {
            closeModal(modals[index]); // Close the corresponding modal
        });
    });

    // Close the modal when clicking outside the modal content
    window.addEventListener('click', function(event) {
        modals.forEach(modal => {
            if (event.target === modal) {
                closeModal(modal); // Close the modal if clicked outside
            }
        });
    });
});



