    });

    // To check address valid 
    document.getElementById("addform").addEventListener("submit", function (event) {
        event.preventDefault(); 

        document.querySelectorAll('.error-message').forEach(el => {
            el.style.display = 'none'; 
        });

        let isValid = true;

        const name = document.getElementById('name');
        const phone = document.getElementById('phone');
        const locality = document.getElementById('locality');
        const district = document.getElementById('district');
        const address = document.getElementById('address');
        const state = document.getElementById('state');
        const pincode = document.getElementById('pincode');
        const alternatePhone = document.getElementById('alternate_phone');

        // Validation checks
        if (name.value.trim() === '') {
            document.getElementById('error1').textContent = 'Name is required.';
            document.getElementById('error1').style.display = 'block';
            isValid = false;
        }

        if (phone.value.trim() === '') {
            document.getElementById('error2').textContent = 'Phone number is required.';
            document.getElementById('error2').style.display = 'block';
            isValid = false;
        }

        if (locality.value.trim() === '') {
            document.getElementById('error3').textContent = 'Locality is required.';
            document.getElementById('error3').style.display = 'block';
            isValid = false;
        }

        if (district.value.trim() === '') {
            document.getElementById('error4').textContent = 'District is required.';
            document.getElementById('error4').style.display = 'block';
            isValid = false;
        }

        if (address.value.trim() === '') {
            document.getElementById('error5').textContent = 'Address is required.';
            document.getElementById('error5').style.display = 'block';
            isValid = false;
        }

        if (state.value.trim() === '') {
            document.getElementById('error6').textContent = 'State is required.';
            document.getElementById('error6').style.display = 'block';
            isValid = false;
        }

        if (pincode.value.trim() === '') {
            document.getElementById('error7').textContent = 'Pincode is required.';
            document.getElementById('error7').style.display = 'block';
            isValid = false;
        }

        if (alternatePhone.value.trim() === '') {
            document.getElementById('error8').textContent = 'Alternate phone number is required.';
            document.getElementById('error8').style.display = 'block';
            isValid = false;
        }

        // Submit the form if all validations pass
        if (isValid) {
            console.log("Form is valid, submitting...");
            event.target.submit(); 
        } else {
            console.log("Form is invalid, not submitting.");
        }
    });

    // For razorpay
    document.getElementById('proceed-btn').addEventListener('click', async (event) => {
        event.preventDefault(); 

                    console.log('in the event');
            console.log('payment method',document.querySelector('input[name="paymentMethod"]:checked').value);
            console.log('address',document.querySelector('input[name="selectedAddress"]:checked').value);
            console.log('hello darling')
        const selectedPaymentMethod = document.querySelector('input[name="paymentMethod"]:checked').value;
        const selectedAddress = document.querySelector('input[name="selectedAddress"]:checked').value;

        if (selectedPaymentMethod === 'Cash on Delivery') {
            const response = await fetch('/checkout/placeOrder', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ selectedAddress, paymentMethod: 'Cash on Delivery' }),
            });

            if (response.ok) {
                const { orderId } = await response.json();
                console.log('orderid',orderId)
                window.location.href = `/orderConfirmation/${orderId}`;
            } else {
                alert('Failed to place order. Please try again.');
            }
        } else if (selectedPaymentMethod === 'razorpay') {
            try {
                const response = await fetch('/createOrder', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ selectedAddress, paymentMethod: 'razorpay' }),
                });

                if (!response.ok) throw new Error('Failed to initiate Razorpay order.');

                const { razorpayOrderId, orderPrice,orderId } = await response.json();

                const options = {
                    key: 'rzp_test_QClWP75u7ELl6o',
                    amount: orderPrice * 100,
                    currency: 'INR',
                    name: 'Feather',
                    description: 'Order Payment',
                    order_id: razorpayOrderId,
                    handler: async (paymentDetails) => {
                        const verifyResponse = await fetch('/verifyPayment', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ ...paymentDetails, selectedAddress ,orderId}),
                       });

                        if (verifyResponse.ok) {
                            const { orderId } = await verifyResponse.json();
                            window.location.href = `/orderConfirmation/${orderId}`;
                        } else {
